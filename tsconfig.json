{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@tambr/contracts": ["packages/contracts/src"],
      "@tambr/backend": ["packages/backend/src"],
      "@tambr/frontend": ["packages/frontend/src"],
      "@tambr/relayer": ["packages/relayer/src"],
      "@tambr/shared": ["packages/shared/src"]
    }
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
